<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div id="wrapper">
      <div class="card">
        <div class="user-info">
          <h3>User Information</h3>
        </div>

          <div class="user-show">
                  <center class="user-container">

                    <%= image_tag(@user.picture, class: "image") %>

                      <h4>Name</h4><h2><stong><%= @user.first_name %> <%= @user.last_name %></stong></h2>

                      <h5><%= @user.email %></h5>

                    <%= link_to 'Edit', edit_user_path(@user.id) %>
                  </center>
          </div>
      </div>
    </div>
  </div>
</div>
